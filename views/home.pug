doctype html
html(land="en")
    head 
        title="Home"
    header
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    body
        .container.pt-5
            .row 
                .col-sm-12.col-md-9
                    #errorSection(style="display:none")
                        .alert.alert-danger.d-flex.align-items-center(role="alert")
                            i.ps-2.bi.bi-exclamation-circle-fill
                            div#errorMessage 
                    form.form-control.needs-validation#form(novalidate)
                        .input-group.has-validation
                            input#inputFile.form-control(type="file" aria-describedby="button" name='file' required accept=".mp3, .wav, .mp4" aria-label="Upload")
                            button#button.btn.btn-primary(type="submit") Clean
                                i.ps-2.bi.bi-stars
                            .invalid-feedback Please select a file of type mp3, mp4 or wav.
                    
                    #processingSection(style="display:none")
                        h1#processingTitle Processing - 
                        .progress#progressContainer(role="progressbar" aria-label="Animated striped example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100")
                            #progress.progress-bar.progress-bar-striped.progress-bar-animated(style="width: 0%") 0

                    #downloadSection(style="display:none")
                        .card 
                            .card-body
                                .row.text-center
                                    .col-6
                                        a#download.btn.btn-success(download) Download File
                                            i.ps-2.bi.bi-download
                                    .col-6
                                        a.btn.btn-dark(href="/") Clean Next
                                            i.ps-2.bi.bi-stars
                                
                        

                    
</div>

    script(src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    script(src="/js/upload.js")